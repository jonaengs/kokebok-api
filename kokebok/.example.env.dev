#########
# Example .env file for distribution with the source code
#########

DEBUG=True
STRICT_SSL=False  # Toggle strict SSL settings like HSTS
BETTER_EXCEPTIONS=1  # enable better exceptions when debugging locally. Should be 0/False in prod!

DATABASE_URL=postgres://dev:dev@localhost:5432/kokebok-api-dev

# '[::1]' is the IPv6 version of '127.0.0.1'
ALLOWED_HOSTS=localhost,127.0.0.1,[::1]

# Domains from which we accept unsafe requests (POST, PUT, ...)
TRUSTED_ORIGINS=localhost:3000

# Toggle OCR capabilities. Set to False to avoid crashing when OCR is not supported
OCR_ENABLED=False
